/**
* Model:        OrderOfExecution
* Author:       Gudrun Wallentin
* Description:  This model demonstrates the order of execution of different parts of a GAMA model.
*/
model OrderOfExecution

global
{
    int glob_var <- 1;
    
    init {
    	write "time step:" + cycle;
        write "global variable: " + glob_var;
        create agent_B number: 3;  //此时实际上已经触发了init{}
        create agent_A number: 5;    
        create agent_C number: 2;  
        ask agent_A[0] {
        	//#1
        	agent_A_var <- agent_A_var + 1;
        	write "Agent A variable from global: " + agent_A_var;
        }
    }
    reflex global_reflex_1 {
    	write "time step:" + cycle;
    }

    reflex global_reflex_2 {
        glob_var <- glob_var + 1;       
    }
    reflex global_reflex_3 {
        write "global variable: " + glob_var;
    }  
    reflex global_reflex_4 {
        ask CA[0] {
        	grid_var <- int(rnd(100));
        } 
    } 
}

species agent_A {
    int agent_A_var <- 1 update: agent_A_var + 1;

    init {
        write "Agent_A variable: " + agent_A_var;
    }    
    //在每个时间步以后才会执行。
    reflex reflex_A1 {
        write "Agent_A variable: " + agent_A_var;
    }     
}

species agent_B {
    int agent_B_var <- 1;

    init {
        write "Agent_B variable: " + agent_B_var; 
    }

    reflex reflex_B1 {
        agent_B_var <- agent_B_var + 1;
        write "Agent_B variable: " + agent_B_var;     	
    }   
}

species agent_C {
	//ASS: int agent_C_var <- 1 update: agent_C_var;
    int agent_C_var <- 1;

    init {
        write "Agent_C variable: " + agent_C_var; 
    }

    reflex reflex_C1 {
        agent_C_var <- agent_C_var + 1;
    } 
    reflex reflex_C2 {
        write "Agent_C variable: " + agent_C_var;     	
    }
}

grid CA width: 2 height: 2{
    int grid_var <- 1 update: grid_var + 1;
    
    init{
    	//ASS: delete the grid_var increment, as there is already an update
    	grid_var <- grid_var + 1;
        write "CA variable: " + grid_var;
    }

    reflex reflexA{
    	//ASS: delete the grid_var increment, as there is already an update
    	grid_var <- grid_var + 1;
        write "CA variable: " + grid_var;
    }
}

experiment OrderOfExecution type: gui {
    species_display {
        agent_A {
            display: list {
                attribute: agent_A_var;
                color: #FF0000; // 代理 A 的颜色，可以自定义
                // 其他显示选项可以根据需要进行自定义
            }
        }

        agent_B {
            display: list {
                attribute: agent_B_var;
                color: #00FF00; // 代理 B 的颜色，可以自定义
                // 其他显示选项可以根据需要进行自定义
            }
        }

        agent_C {
            display: list {
                attribute: agent_C_var;
                color: #0000FF; // 代理 C 的颜色，可以自定义
                // 其他显示选项可以根据需要进行自定义
            }
        }

        CA {
            display: colorgrid {
                attribute: grid_var;
                // 可以根据需要自定义映射和颜色
            }
        }
    }
}